<script>
// Color picker real-time preview and validation
document.addEventListener('DOMContentLoaded', function() {
    const colorInputs = document.querySelectorAll('input[type="color"]');
    const labelInputs = document.querySelectorAll('.label-input');
    const form = document.querySelector('form');
    const submitButton = form.querySelector('input[type="submit"]');

    // Real-time preview updates for colors
    colorInputs.forEach(input => {
        input.addEventListener('input', function() {
            const category = this.dataset.category;
            const color = this.value.toUpperCase();
            const colorRow = this.closest('.color-input-row');
            const preview = colorRow.querySelector('.color-preview-box');
            const valueDisplay = colorRow.querySelector('.color-value-display');

            // Update preview
            preview.style.backgroundColor = color;
            preview.style.color = getContrastColor(color);
            valueDisplay.textContent = color;

            // Check for duplicates
            checkDuplicateColors();
        });
    });

    // Real-time preview updates for labels
    labelInputs.forEach(input => {
        input.addEventListener('input', function() {
            const category = this.dataset.category;
            const label = this.value.trim() || 'Unnamed';

            // Update threshold preview blocks
            const block = document.querySelector(`.color-preview .color-block[data-category="${category}"]`);
            if (block) {
                block.textContent = label;
            }
        });
    });

    // Duplicate color validation
    function checkDuplicateColors() {
        const colors = Array.from(colorInputs).map(input => input.value.toUpperCase());
        const hasDuplicates = colors.length !== new Set(colors).size;

        if (hasDuplicates) {
            // Highlight duplicates
            colorInputs.forEach((input, index) => {
                const color = input.value.toUpperCase();
                const isDuplicate = colors.filter(c => c === color).length > 1;
                if (isDuplicate) {
                    input.classList.add('duplicate');
                } else {
                    input.classList.remove('duplicate');
                }
            });

            // Show error message
            showErrorMessage('Error: Each category must have a unique color. Please change the highlighted color pickers.');

            // Disable submit
            submitButton.disabled = true;
            submitButton.style.opacity = '0.5';
            submitButton.style.cursor = 'not-allowed';
        } else {
            // Clear highlights
            colorInputs.forEach(input => {
                input.classList.remove('duplicate');
            });

            hideErrorMessage();
            submitButton.disabled = false;
            submitButton.style.opacity = '1';
            submitButton.style.cursor = 'pointer';
        }
    }

    // Calculate contrast color for preview (client-side version)
    function getContrastColor(hexColor) {
        const hex = hexColor.replace('#', '');
        const r = parseInt(hex.substr(0, 2), 16) / 255;
        const g = parseInt(hex.substr(2, 2), 16) / 255;
        const b = parseInt(hex.substr(4, 2), 16) / 255;

        const rLinear = r <= 0.03928 ? r / 12.92 : Math.pow((r + 0.055) / 1.055, 2.4);
        const gLinear = g <= 0.03928 ? g / 12.92 : Math.pow((g + 0.055) / 1.055, 2.4);
        const bLinear = b <= 0.03928 ? b / 12.92 : Math.pow((b + 0.055) / 1.055, 2.4);

        const luminance = 0.2126 * rLinear + 0.7152 * gLinear + 0.0722 * bLinear;
        return luminance < 0.5 ? 'white' : 'black';
    }

    function showErrorMessage(msg) {
        const errorDiv = document.getElementById('color-error');
        errorDiv.textContent = msg;
        errorDiv.style.display = 'block';
        // Scroll to error
        errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    function hideErrorMessage() {
        const errorDiv = document.getElementById('color-error');
        errorDiv.style.display = 'none';
    }

    // Initial duplicate check
    checkDuplicateColors();

    // Also update the existing threshold color previews if they exist
    const colorBlocks = document.querySelectorAll('.color-preview .color-block');
    if (colorBlocks.length > 0) {
        colorInputs.forEach(input => {
            input.addEventListener('input', function() {
                const category = this.dataset.category;
