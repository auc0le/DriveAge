<script>
// Unified category settings real-time preview and validation
document.addEventListener('DOMContentLoaded', function() {
    const colorInputs = document.querySelectorAll('.color-input');
    const labelInputs = document.querySelectorAll('.label-input');
    const thresholdInputs = document.querySelectorAll('.threshold-years');
    const form = document.querySelector('form');
    const submitButton = form.querySelector('input[type="submit"]');

    // Intercept form submission to set settings changed flag
    form.addEventListener('submit', function(e) {
        // Set flag in localStorage to trigger dashboard to reload data
        // No cache clearing needed - we rely on Unraid's emhttpd cache
        // Settings changes (labels, colors) are applied dynamically via JavaScript
        localStorage.setItem('driveage_settings_changed', Date.now().toString());
        console.log('DriveAge settings changed flag set');

        // Let form submission continue to /update.php
    });

    // Real-time preview updates for colors
    colorInputs.forEach(input => {
        input.addEventListener('input', function() {
            const category = this.dataset.category;
            const colorRow = this.closest('.color-row');
            const preview = colorRow.querySelector('.color-preview-inline');

            // Get both background and text colors for this category
            const bgColor = colorRow.querySelector('.bg-color').value.toUpperCase();
            const textColor = colorRow.querySelector('.text-color').value.toUpperCase();

            // Update preview with both colors
            preview.style.backgroundColor = bgColor;
            preview.style.color = textColor;

            // Check for duplicates (only for background colors)
            if (this.classList.contains('bg-color')) {
                checkDuplicateColors();
            }
        });
    });

    // Threshold year-to-hour conversion
    thresholdInputs.forEach(input => {
        input.addEventListener('input', function() {
            const years = parseFloat(this.value) || 0;
            const hours = Math.round(years * 8760);
            const field = this.dataset.field;
            const hiddenInput = document.querySelector(`input[name="${field}"]`);
            if (hiddenInput) {
                hiddenInput.value = hours;
            }
        });
    });

    // Duplicate color validation (only for background colors)
    function checkDuplicateColors() {
        const bgColorInputs = document.querySelectorAll('.bg-color');
        const colors = Array.from(bgColorInputs).map(input => input.value.toUpperCase());
        const hasDuplicates = colors.length !== new Set(colors).size;

        if (hasDuplicates) {
            // Highlight duplicates (only background color inputs)
            bgColorInputs.forEach((input, index) => {
                const color = input.value.toUpperCase();
                const isDuplicate = colors.filter(c => c === color).length > 1;
                if (isDuplicate) {
                    input.classList.add('duplicate');
                } else {
                    input.classList.remove('duplicate');
                }
            });

            // Show error message
            showErrorMessage('Error: Each category must have a unique color. Please change the highlighted color pickers.');

            // Disable submit
            submitButton.disabled = true;
            submitButton.style.opacity = '0.5';
            submitButton.style.cursor = 'not-allowed';
        } else {
            // Clear highlights
            bgColorInputs.forEach(input => {
                input.classList.remove('duplicate');
            });

            hideErrorMessage();
            submitButton.disabled = false;
            submitButton.style.opacity = '1';
            submitButton.style.cursor = 'pointer';
        }
    }

    function showErrorMessage(msg) {
        const errorDiv = document.getElementById('color-error');
        errorDiv.textContent = msg;
        errorDiv.style.display = 'block';
        // Scroll to error
        errorDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    function hideErrorMessage() {
        const errorDiv = document.getElementById('color-error');
        errorDiv.style.display = 'none';
    }

    // Initial duplicate check
    checkDuplicateColors();

    // Initialize all previews with correct background and text colors
    const allPreviews = document.querySelectorAll('.color-preview-inline');
    allPreviews.forEach(preview => {
        const category = preview.dataset.category;
        const colorRow = preview.closest('.color-row');
        const bgColor = colorRow.querySelector('.bg-color').value.toUpperCase();
        const textColor = colorRow.querySelector('.text-color').value.toUpperCase();

        preview.style.backgroundColor = bgColor;
        preview.style.color = textColor;
    });
});
</script>
